{
    "swagger": "2.0",
    "info": {
        "title": "MusicAPI",
        "contact": {},
        "version": "1.0"
    },
    "paths": {
        "/track/add": {
            "post": {
                "description": "Fetches track's info and adds it into the database",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Track"
                ],
                "parameters": [
                    {
                        "description": "contains group and song name of track to add",
                        "name": "dto",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/music.AddTrackDTO"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/pkg.InfoRes"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/pkg.ErrorRes"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/pkg.ErrorRes"
                        }
                    }
                }
            }
        },
        "/track/delete": {
            "delete": {
                "description": "Deletes a track from the database by provided group and song name",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Track"
                ],
                "parameters": [
                    {
                        "description": "contains group and song name of track to delete",
                        "name": "dto",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/music.DeleteTrackDTO"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/pkg.InfoRes"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/pkg.ErrorRes"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/pkg.ErrorRes"
                        }
                    }
                }
            }
        },
        "/track/text": {
            "get": {
                "description": "Returns a track's text paginated by 1 verse per page by default",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Track"
                ],
                "parameters": [
                    {
                        "type": "string",
                        "description": "filter for 'group' field",
                        "name": "group",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "filter for 'song' field",
                        "name": "song",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "page number",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "number of verses per page",
                        "name": "verseCount",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/pkg.TrackTextRes"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/pkg.ErrorRes"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/pkg.ErrorRes"
                        }
                    }
                }
            }
        },
        "/track/update": {
            "post": {
                "description": "Updates a track's info in the database",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Track"
                ],
                "parameters": [
                    {
                        "description": "contains group and song name and info fields to update",
                        "name": "dto",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/music.UpdateTrackDTO"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/pkg.InfoRes"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/pkg.ErrorRes"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/pkg.ErrorRes"
                        }
                    }
                }
            }
        },
        "/tracks": {
            "get": {
                "description": "Returns a list of tracks paginated by 10 items per page by default",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Track"
                ],
                "parameters": [
                    {
                        "type": "string",
                        "description": "filter for 'group' field",
                        "name": "group",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "filter for 'song' field",
                        "name": "song",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "filter for 'date' field",
                        "name": "date",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "filter for 'text' field",
                        "name": "text",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "filter for 'link' field",
                        "name": "link",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "page number",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "number of items per page",
                        "name": "size",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/pkg.TracksRes"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/pkg.ErrorRes"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "music.AddTrackDTO": {
            "type": "object",
            "properties": {
                "group": {
                    "type": "string"
                },
                "song": {
                    "type": "string"
                }
            }
        },
        "music.DeleteTrackDTO": {
            "type": "object",
            "properties": {
                "group": {
                    "type": "string"
                },
                "song": {
                    "type": "string"
                }
            }
        },
        "music.UpdateTrackDTO": {
            "type": "object",
            "properties": {
                "group": {
                    "type": "string"
                },
                "newLink": {
                    "type": "string"
                },
                "newReleaseDate": {
                    "type": "string"
                },
                "newText": {
                    "type": "string"
                },
                "song": {
                    "type": "string"
                }
            }
        },
        "pkg.ErrorRes": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        },
        "pkg.InfoRes": {
            "type": "object",
            "properties": {
                "info": {
                    "type": "string"
                }
            }
        },
        "pkg.Track": {
            "type": "object",
            "properties": {
                "group": {
                    "type": "string"
                },
                "link": {
                    "type": "string"
                },
                "releaseDate": {
                    "type": "string"
                },
                "song": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                }
            }
        },
        "pkg.TrackTextRes": {
            "type": "object",
            "properties": {
                "text": {
                    "type": "string"
                }
            }
        },
        "pkg.TracksRes": {
            "type": "object",
            "properties": {
                "tracks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/pkg.Track"
                    }
                }
            }
        }
    }
}